

<%# Comment:
    Styling the header based on the url route, for more friendly UI for Phone view,URL parameter comes from theserverside which will pass the route value here. 
%>
<%  
    let colLogo;
    let colBtn;

    let align;
    let display;
    
    if(url == "/" ){
        colLogo = "col-2";
        colBtn = "col-10";
    }else{
        colLogo = "col-12";
        colBtn = ""
        align = "center";
        display = "none";
    }

    let components = [
    {
        url:"join-call",
        innerText: "Join A Call",
        class:"secondary"
    },
    {
        url:"new-call",
        innerText: "Try For Free",
        class:"primary"
    }    
    ]

%>

<section class="container-fluid header-container-fluid">
    <div class="container">
        <div class="row">
            <div class="<%= colLogo %>" style="text-align: <%= align %>" >
                <h2 class="header-name">

                    <a href="/">
                        <%= lib.app_name %>
                    </a>
                </h2>
            </div>
            <div class="<%= colBtn %> try-now-button" style="display:  <%= display %> ;">
                <div>
                    <% for(let i = 0; i<components.length; i++ ){ %>
                        <a class="<%= components[i].class %>" href="/<%= components[i].url %>" target="_blank"><%= components[i].innerText %></a>
                        <%}%>
                </div>
            </div>
        </div>
    </div>
</section>